<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
<meta name="viewport" content="width=device-width" />

<title>Aether/Reg</title>
<link rel="stylesheet" type="text/css" href="style.css">
<link rel="icon" href="favicon.ico?v=1.1">

<body>
    <nav class="read-nav">
        <a href="/" class="read-nav-logo">                    
            uc-fs
        </a>
    </nav>



    <div class="login">

            <div class="title-log">
                <h1>Register</h1>
            </div>

            <div class="body-reg">
                <form action="/api/register" method="POST" class="register-form">
                    <div class="register">

                        <div>
                            <label for="name">Name</label>
                            <input type="text" name="tag" id="tag" required>
                        </div>
                        <div>
                            <label for="email">email</label>
                            <input type="text" name="email" id="email" required>
                        </div>
                        <div>
                            <label for="password">Password</label>
                            <input type="text" name="password" id="password" required>

                        </div>
                        <div>
                            <label for="password2">Confirm</label>
                            <input type="text" name="password2" id="password2" required>
                        </div>
    
                        <div>
                            <label for="token" class="token">Token
                                <span class="tooltip">
                                    <span class="tooltiptext">You need an invite token to create an account learn more under /join</span>
                                    <span class="material-symbols-outlined">info</span>
                                </span>
                            </label>
                            <input type="text" name="token" id="token" required>
                        </div>
                        <% if (typeof regerror !== "undefined") { %>
                            <p><%= regerror %> <br><a href="/join#token-explain">learn more about it here</a></p>
                        <% } %>
                    </div>

        
                    <div class="reg-btn">
                        <button type="submit">Enter</button>
                    </div>
                </form>

            </div>
            <div class="switch-log">
                <p class="signup"><a href="/login">Been here before?</a></p>
            </div>
        
    </div>



    
</body>